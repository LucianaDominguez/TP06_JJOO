@{
    ViewData["Title"] = "Detalle Pais";
}
<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>

<div class = "bannerPais">
<h2>@ViewBag.DatosPais.Nombre</h2>
</div>
<div class= "infoPais" >
<img src="~/img/@ViewBag.DatosPais.Bandera">
<h2>Fecha de Fundación: @ViewBag.DatosPais.FechaFundacion.ToShortDateString()</h2>
</div>
<section class="depXpais">
  @foreach(Deportista dep in ViewBag.ListaDeportistasPais){
      <div class="card" style="width: 18rem;">
    <img src="@dep.Foto" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"> @dep.Apellido</h5>
      <a href='@Url.Action("VerDetalleDeportista", "Home", new { IdDeportista = dep.IdDeportista })' class="btn btn-primary">Ver Más</a>
    </div>
  </div>
  }
</section>
