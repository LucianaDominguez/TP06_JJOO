@{
    ViewData["Title"] = "Agregar Deportista";
}
<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>

<h1>Agregar Deportista</h1>

 <div class="container mt-4">
        <form action="GuardarDeportista" method="post">
            <!-- Campo Nombre -->
            <div class="mb-3">
                <label for="Nombre" class="form-label">Nombre:</label>
                <input type="text" id="Nombre" name="Nombre" class="form-control" required />
            </div>

            <!-- Campo Apellido -->
            <div class="mb-3">
                <label for="Apellido" class="form-label">Apellido:</label>
                <input type="text" id="Apellido" name="Apellido" class="form-control" required />
            </div>

            <!-- Campo Fecha de Nacimiento -->
            <div class="mb-3">
                <label for="FechaNacimiento" class="form-label">Fecha de Nacimiento:</label>
                <input type="date" id="FechaNacimiento" name="FechaNacimiento" class="form-control" required />
            </div>

            <!-- Campo Foto (URL) -->
            <div class="mb-3">
                <label for="Foto" class="form-label">Foto (URL):</label>
                <input type="text" id="Foto" name="Foto" class="form-control" placeholder="Ingrese URL de la imagen" required />
            </div>

            <!-- Selector Deporte -->
            <div class="mb-3">
                <label for="IdDeporte" class="form-label">Deporte:</label>
                <select id="IdDeporte" name="IdDeporte" class="form-select" required>
                    <option value="">Seleccione un Deporte</option>
                    @foreach (Deporte deporte in BD.ListarDeportes())
                    {
                        <option value="@deporte.IdDeporte">@deporte.Nombre</option>
                    }
                </select>
            </div>

            <!-- Selector País -->
            <div class="mb-3">
                <label for="IdPais" class="form-label">País:</label>
                <select id="IdPais" name="IdPais" class="form-select" required>
                    <option value="">Seleccione un País</option>
                    @foreach (Pais pais in BD.ListarPaises())
                    {
                        <option value="@pais.IdPais">@pais.Nombre</option>
                    }
                </select>
            </div>

            <!-- Botón de Enviar -->
            <button type="submit" class="btn btn-primary">Guardar Deportista</button>
        </form>
    </div>